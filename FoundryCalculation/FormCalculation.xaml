                <Button.Background>
                    <ImageBrush ImageSource="Resources/Сифонный подвод с 2 сторон.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Height="65" Width="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Ярусный подвод с 2 сторон.png"/>
