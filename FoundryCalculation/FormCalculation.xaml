            <TextBox HorizontalAlignment="Left" Margin="212,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox HorizontalAlignment="Left" Margin="212,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
