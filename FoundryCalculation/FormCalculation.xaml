<Window x:Class="FoundryCalculation.FormCalculation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoundryCalculation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Расчет формы" Height="503" Width="883">
    <Grid Background="#FF202020" Margin="0,0,0,-9">
        <Grid Margin="38,38,0,0" Background="#FF2B2B2B" HorizontalAlignment="Left" Width="346" Height="229" VerticalAlignment="Top">
            <TextBox HorizontalAlignment="Left" Margin="212,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox HorizontalAlignment="Left" Margin="212,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox HorizontalAlignment="Left" Margin="212,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox HorizontalAlignment="Left" Margin="212,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox HorizontalAlignment="Left" Margin="212,114,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" LineHeight="26" VerticalAlignment="Top" Foreground="White">
                1. Высота полости формы
<LineBreak/>
2. Ширина полости формы
<LineBreak/>
3. Толщина полости формы
<LineBreak/>
4. Длина полости формы
<LineBreak/>
5. Напор расплава
<LineBreak/>
6. Выбор сплава
                <LineBreak/>
                7. Выбор состава смеси
                <LineBreak/>
                8. Выбор материала покрытия
            </TextBlock>
            <ComboBox x:Name="AlloySelection" HorizontalAlignment="Left" Margin="212,141,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
            <ComboBox x:Name="MixtureSelection" HorizontalAlignment="Left" Margin="212,167,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
            <ComboBox x:Name="CoverageSelection" HorizontalAlignment="Left" Margin="212,193,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
        </Grid>
        <Grid Margin="38,285,0,0" Background="#FF2B2B2B" HorizontalAlignment="Left" Width="346" Height="201" VerticalAlignment="Top">
            <Label Content="Выбор схемы подвода" HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top" Width="138" Foreground="White"/>
            <Button HorizontalAlignment="Left" Margin="23,39,0,0" VerticalAlignment="Top" Height="65" Width="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Боковой подвод.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Height="65" Width="66">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Боковой подвод с 2 сторон.png"/>
                </Button.Background>
            </Button>
            <Button Margin="260,39,20,0" VerticalAlignment="Top" Height="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Сифонный подвод.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Margin="23,126,0,0" VerticalAlignment="Top" Height="65" Width="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Сифонный подвод с 2 сторон.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Height="65" Width="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Ярусный подвод с 2 сторон.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Margin="261,126,0,0" VerticalAlignment="Top" Height="65" Width="65">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Вертикально-щелевой.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Margin="424,38,30,138" Background="#FF2B2B2B">
            <Label x:Name="ExampleLabel" Content="Example: " HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
