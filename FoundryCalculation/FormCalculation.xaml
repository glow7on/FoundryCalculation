            <Label x:Name="thicknessGap" Content="Толщина щели: " HorizontalAlignment="Left" Margin="114,100,0,0" VerticalAlignment="Top" Foreground="White" FontSize="6"/>
            <Label x:Name="spreadingAngle" Content="Угол растекания расплава: " HorizontalAlignment="Left" Margin="170,100,0,0" VerticalAlignment="Top" Foreground="White" FontSize="6"/>
