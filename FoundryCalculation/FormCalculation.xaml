<Window x:Class="FoundryCalculation.FormCalculation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoundryCalculation"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Расчет формы" Height="644" Width="1160">
    <Grid Background="#FF202020" Margin="0,0,0,-115">
        <Grid Margin="38,38,0,0" Background="#FF2B2B2B" HorizontalAlignment="Left" Width="359" Height="320" VerticalAlignment="Top">
            <TextBox x:Name="formHeightBox" HorizontalAlignment="Left" Margin="234,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox x:Name="formWidthBox" HorizontalAlignment="Left" Margin="234,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox x:Name="formThickBox" HorizontalAlignment="Left" Margin="234,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox x:Name="formLengthBox" HorizontalAlignment="Left" Margin="234,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox x:Name="meltPressureBox" HorizontalAlignment="Left" Margin="234,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22"/>
            <TextBox x:Name="fillingTemperatureBox" HorizontalAlignment="Left" Margin="234,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="107" Height="22" IsEnabled="False"/>
            <Label x:Name="fillingTemperatureLabel" Content="(Рек.: )" HorizontalAlignment="Left" Margin="145,174,0,0" VerticalAlignment="Top" Foreground="White"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" LineHeight="28" VerticalAlignment="Top" Foreground="White">
                1. Высота полости формы (мм)
<LineBreak/>
2. Ширина полости формы (мм)
<LineBreak/>
3. Толщина полости формы (мм)
<LineBreak/>
4. Длина полости формы (мм)
<LineBreak/>
5. Напор расплава (мм)
<LineBreak/>
6. Выбор сплава
                <LineBreak/>
                7. Температура металла
                <LineBreak/>
                8. Выбор состава смеси
                <LineBreak/>
                9. Выбор материала покрытия
                <LineBreak/>
                10. Выбор схемы подвода
                <LineBreak/>
            11. Выбор конфигурации формы
            </TextBlock>
            <ComboBox x:Name="AlloySelection" HorizontalAlignment="Left" Margin="234,0,0,0" VerticalAlignment="Center" Width="107" Height="22" SelectionChanged="AlloySelectionChange"/>
            <ComboBox x:Name="MixtureSelection" HorizontalAlignment="Left" Margin="234,205,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
            <ComboBox x:Name="CoverageSelection" HorizontalAlignment="Left" Margin="234,233,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
            <ComboBox x:Name="meltSupplySchemesSelection" HorizontalAlignment="Left" Margin="234,261,0,0" VerticalAlignment="Top" Width="107" Height="22" SelectionChanged="MeltSupplySchemeChange"/>
            <ComboBox x:Name="ComplexitySelection" HorizontalAlignment="Left" Margin="234,289,0,0" VerticalAlignment="Top" Width="107" Height="22"/>
            <RadioButton x:Name="AluminiumRadioBtn" Content="Алюминий" IsChecked="True" HorizontalAlignment="Left" Margin="118,142,0,0" VerticalAlignment="Top" Foreground="White" Checked="SwitchToAluminium"/>
            <RadioButton x:Name="MagniumRadioBtn" Content="Магний" HorizontalAlignment="Left" Margin="118,157,0,0" VerticalAlignment="Top" Foreground="White" Checked="SwitchToMagnium"/>
        </Grid>
        <Grid Margin="38,372,0,0" Background="#FF2B2B2B" HorizontalAlignment="Left" Width="359" Height="201" VerticalAlignment="Top">
            <Label x:Name="SelectedSchemeLabel" Content="Выбранная схема подвода: пусто" HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top" Width="338" Foreground="White" FontSize="10"/>
        </Grid>
        <Grid Margin="424,38,39,0" Background="#FF2B2B2B" Height="661" VerticalAlignment="Top">
            <Grid Margin="453,28,0,0" Background="#FF373737" Height="84" VerticalAlignment="Top" HorizontalAlignment="Left" Width="192">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="8,8,0,0" LineHeight="25" Foreground="White"><Run Text="Критерий Пекле:"/><LineBreak/><Run Text="Критерий Нуссельта:"/><LineBreak/><Run Text="Коэффициент расхода:"/></TextBlock>
                <Label x:Name="pecleCriterionLabel" Content="null" HorizontalAlignment="Left" Margin="145,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="nusseltCriterionLabel" Content="null" HorizontalAlignment="Left" Margin="145,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                <Label x:Name="expenseRatioLabel" Content="null" HorizontalAlignment="Left" Margin="145,55,0,0" VerticalAlignment="Top" Foreground="White"/>
            </Grid>
            <Grid Margin="10,334,0,0" Background="#FF373737" HorizontalAlignment="Left" Width="372" Height="149" VerticalAlignment="Top">
                <Label x:Name="squareInArrowLabel" Content="null" HorizontalAlignment="Left" Margin="333,44,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="squareFirstToSecondLabel" Content="null" HorizontalAlignment="Left" Margin="334,67,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="reducedSizeLabel" Content="null" HorizontalAlignment="Left" Margin="333,93,0,0" VerticalAlignment="Top" Foreground="White" Width="45"/>
                <Label x:Name="reducedCastingSizeLabel" Content="null" HorizontalAlignment="Left" Margin="334,116,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock HorizontalAlignment="Left" Margin="7,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" LineHeight="25" Foreground="White"><Run Text="ИЗМЕНЕНО"/><LineBreak/> <Run Text="Площадь поперечного сечения в узком месте:"/><LineBreak/><Run Text="Площадь поперечного сечения на участке (1-2)"/><LineBreak/><Run Text="Приведенный размер растекающегося потока расплава:"/><LineBreak/><Run Text="Приведенный размер отливки:"/></TextBlock>

            </Grid>
            <Grid Margin="20,29,0,0" Background="#FF373737" HorizontalAlignment="Left" Width="416" Height="166" VerticalAlignment="Top">
                <Label x:Name="flowStopTemperatureLabel" Content="null" HorizontalAlignment="Left" Margin="367,4,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="meltFrontTemperatureLabel" Content="null" HorizontalAlignment="Left" Margin="367,30,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="meltFlowFrontTemperatureLabel" Content="null" HorizontalAlignment="Left" Margin="367,55,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="meltThermalConductivityLabel" Content="null" HorizontalAlignment="Left" Margin="367,80,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="meltHeatTransferLabel" Content="null" HorizontalAlignment="Left" Margin="367,106,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="spreadingMeltTransferLabel" Content="null" HorizontalAlignment="Left" Margin="367,129,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="356" LineHeight="25" Foreground="White" Margin="9,0,0,0"><Run Text="Температура остановки потока расплава Т0:"/><LineBreak/><Run Text="Температура фронта потока расплава Т1-2 в узле 2:"/><LineBreak/><Run Text="Температура фронта потока расплава"/><LineBreak/><Run Text="Температуропроводность расплава:"/><LineBreak/><Run Text="Теплоотдача расплава:"/><LineBreak/><Run Text="Теплоотдача расплава при проточно-поперечном растекании:"/></TextBlock>
            </Grid>
            <Grid Margin="20,539,0,0" Background="#FF373737" HorizontalAlignment="Left" Width="394" Height="117" VerticalAlignment="Top">
                <Label x:Name="fillingRateLimitLabel" Content="null" HorizontalAlignment="Left" Margin="334,6,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="transverseSpreadingRateLabel" Content="null" HorizontalAlignment="Left" Margin="334,32,0,58" Foreground="White"/>
                <Label x:Name="meltFlowRateLabel" Content="null" HorizontalAlignment="Left" Margin="334,57,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="speedInArrowLabel" Content="null" HorizontalAlignment="Left" Margin="334,82,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" LineHeight="25"  VerticalAlignment="Top" Foreground="White">
                    Предельно допустимая скорость заполнения:
                    <LineBreak/>
                    Скорость поперечного растекания расплава в полости:
                    <LineBreak/>
                    Скорость потока расплава:
                    <LineBreak/>
                    Скорость течения в узком месте:

                </TextBlock>
            </Grid>
            <Grid Margin="453,127,0,0" Background="#FF373737" HorizontalAlignment="Left" Width="236" Height="90" VerticalAlignment="Top">
                <Label x:Name="permissibleMeltFlowRateLabel" Content="null" HorizontalAlignment="Left" Margin="195,6,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="calculationPlessureLabel" Content="null" HorizontalAlignment="Left" Margin="195,32,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="spreadingAngleLabel" Content="null" HorizontalAlignment="Left" Margin="195,57,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,9,0,0" LineHeight="25"  TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White">
                    Допустимый расход расплава:
                    <LineBreak/>
                    Расчётный напор:
                    <LineBreak/>
                    Угол растекания расплава:
                </TextBlock>
            </Grid>
            <Grid Margin="417,272,0,0" Background="#FF373737" HorizontalAlignment="Left" Width="390" Height="221" VerticalAlignment="Top">
                <Label x:Name="riserSquareLabel1" Content="null" HorizontalAlignment="Left" Margin="334,5,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="riserSizeLabel_Копировать1" Content="null" HorizontalAlignment="Left" Margin="334,31,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="pitDiameterLabel1" Content="null" HorizontalAlignment="Left" Margin="334,56,0,0" Foreground="White" VerticalAlignment="Top"/>
                <Label x:Name="thicknessGapLabel1" Content="null" HorizontalAlignment="Left" Margin="334,79,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="maxSpreadingLengthLabel1" Content="null" HorizontalAlignment="Left" Margin="334,106,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="permissibleFlowHeightLabel1" Content="null" HorizontalAlignment="Left" Margin="334,131,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="crossSectionalAreaLabel1" Content="null" HorizontalAlignment="Left" Margin="334,157,0,0" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock HorizontalAlignment="Left" Margin="7,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" LineHeight="25" Foreground="White" Width="303"><Run Text="ВЕРТИКАЛЬНО-ЩЕЛЕВОЙ ИЗМЕНЕНО"/><LineBreak/><Run Text="Площадь стояка:"/><LineBreak/><Run Text="Размер стояка:"/><LineBreak/><Run Text="Диаметр колодца"/><LineBreak/><Run Text="Толщина щели:"/><LineBreak/><Run Text="Максимальная длина расстояния раслпава, м:"/><LineBreak/><Run Text="Высота потока расплава при допустимом расходе, м:"/><LineBreak/><Run Text="Площадь поперечного сечения():"/></TextBlock>

            </Grid>
        </Grid>
        <Button Content="Применить изменения" HorizontalAlignment="Left" Margin="38,586,0,0" VerticalAlignment="Top" Height="46" Width="359" Background="#FF2B2B2B" Foreground="White" Click="StartCalculation"/>
        <Image x:Name="SupplySchemeImage" Source="/Resources/Side.png" HorizontalAlignment="Left" Height="154" Margin="47,409,0,0" VerticalAlignment="Top" Width="336"/>
    </Grid>
</Window>
